body{
    display: flex;
    justify-content: center;
    height: 100vh;
    align-items: center;
}

.border{
    height: 230px;
    width: 500px;
    background-color: rgb(95, 90, 90);
    border: 5px solid grey;
    border-radius: 20px;
    display: inline;
}

.top-layer{
    width: 100%;
    height: 80px;
    display: flex;
    justify-content: center;
    align-items: center;
    
}

.input-bar{
    margin-right: 8px;
    border-radius: 20px;
    border: none;
    text-align: center;
}

.display-layer{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.button-area{
    font-size: 50px;
    font-family: Verdana;
    font-weight: 600;
    text-align: center;
    margin-bottom: 10px;
    display: grid;
}

.calcu-btn{
    border-radius: 50px;
    background-color: rgb(10, 10, 61);
    color: rgb(240, 172, 89);
    height: 40px;
    cursor: pointer;
    transition: 0.5s;
    font-family: Verdana;
    font-weight: 600;
}

.calcu-btn:hover{
    background-color: rgb(240, 172, 89);
    color: rgb(10, 10, 61);
}
